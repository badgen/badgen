{
  "compilerOptions": {
    "strict": true,

    "target": "es2017",
    "module": "commonjs",
    "lib": ["esnext", "dom"],

    "rootDir": "src",
    "outDir": "dist",

    "sourceMap":true,
    "declaration": true,

    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": ["src"]
}
